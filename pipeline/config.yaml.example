# =============================================================================
# Personal AI Framework - Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# User Profile (customize this!)
# -----------------------------------------------------------------------------
user:
  name: "Your Name"
  description: "Brief description of who you are and what this AI should know"

# -----------------------------------------------------------------------------
# Model Settings
# -----------------------------------------------------------------------------
model:
  # Default model - change this after running setup.sh
  # Mistral 7B: /app/models/mistral-7b-instruct-v0.2.Q4_K_M.gguf
  # Mixtral 8x7B: /app/models/mixtral-8x7b-instruct-v0.1.Q4_K_M.gguf
  # Personal (after training): /app/models/personal-7b-q4_k_m.gguf
  path: "/app/models/mistral-7b-instruct-v0.2.Q4_K_M.gguf"
  context_length: 8192      # Reduce if you have less VRAM
  max_tokens: 512
  temperature: 0.7
  gpu_layers: -1            # -1 = all layers on GPU

# -----------------------------------------------------------------------------
# Knowledge Base / RAG Settings
# -----------------------------------------------------------------------------
knowledge:
  root_folder: "./knowledge"
  manifest_file: "./knowledge/.ingest_manifest.json"
  
  # File types to process
  include_extensions:
    - .txt
    - .md
    - .json
    - .eml
    - .pdf
    - .mbox
  
  # Patterns to skip
  exclude_patterns:
    - "__pycache__"
    - ".git"
    - ".DS_Store"
    - "*.pyc"
    - ".ingest_manifest.json"
    - "extracted"

  # Chunking
  chunk_size: 512           # Words per chunk
  chunk_overlap: 50         # Overlap between chunks

# -----------------------------------------------------------------------------
# Vector Database
# -----------------------------------------------------------------------------
vectordb:
  host: "vectordb"
  port: 8000
  collection: "personal_knowledge"

# -----------------------------------------------------------------------------
# Server Settings
# -----------------------------------------------------------------------------
server:
  host: "0.0.0.0"
  port: 8080
